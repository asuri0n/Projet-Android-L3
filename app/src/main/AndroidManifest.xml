<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asuri.projet_android_l3">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ActivityListeAnnonces">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityDeposerAnnonce"
            android:parentActivityName=".ActivityListeAnnonces">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.asuri.projet_android_l3.ActivityListeAnnonces" />
        </activity>
        <activity
            android:name=".ActivityVoirAnnonce"
            android:parentActivityName=".ActivityListeAnnonces">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.asuri.projet_android_l3.ActivityListeAnnonces" />
        </activity>
        <activity
            android:name=".ActivityMonProfil"
            android:parentActivityName=".ActivityListeAnnonces">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.asuri.projet_android_l3.ActivityListeAnnonces" />
        </activity>
        <activity
            android:name=".ActivityAPropos"
            android:parentActivityName=".ActivityListeAnnonces">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.asuri.projet_android_l3.ActivityListeAnnonces" />
        </activity>
    </application>

</manifest>