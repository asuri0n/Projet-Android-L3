<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asuri.projet_android_l3.VoirAnnonceActivity">

    <TextView
        android:id="@+id/idAnnonce"
        android:layout_width="104dp"
        android:layout_height="19dp"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="16dp"
        android:hint="ID"
        app:layout_constraintBottom_toTopOf="@+id/titreAnnonce"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/titreAnnonce"
        android:layout_width="363dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Titre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idAnnonce" />

    <TextView
        android:id="@+id/descriptionAnnonce"
        android:layout_width="304dp"
        android:layout_height="59dp"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="40dp"
        android:hint="Description"
        app:layout_constraintBottom_toTopOf="@+id/contactAnnonce"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contactAnnonce"
        android:layout_width="164dp"
        android:layout_height="29dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="40dp"
        android:hint="Contact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgAnnonce"
        android:layout_width="122dp"
        android:layout_height="94dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titreAnnonce"
        app:srcCompat="@android:drawable/alert_dark_frame" />

    <TextView
        android:id="@+id/prixAnnonce"
        android:layout_width="115dp"
        android:layout_height="34dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="40dp"
        android:hint="prix"
        app:layout_constraintBottom_toTopOf="@+id/descriptionAnnonce"
        app:layout_constraintEnd_toStartOf="@+id/adresseAnnonce"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adresseAnnonce"
        android:layout_width="176dp"
        android:layout_height="35dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="41dp"
        android:hint="adresse"
        app:layout_constraintBottom_toTopOf="@+id/descriptionAnnonce"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/mailAnnonce"
        android:layout_width="132dp"
        android:layout_height="26dp"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="40dp"
        android:hint="mail"
        app:layout_constraintBottom_toTopOf="@+id/telAnnonce"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/telAnnonce"
        android:layout_width="132dp"
        android:layout_height="19dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="40dp"
        android:hint="tel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
